{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "user",
            "protocol": "inspector",
            "port": 4321,
            "restart": true,
            "cwd": "${workspaceRoot}/services/user"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "flow",
            "protocol": "inspector",
            "port": 4322,
            "restart": true,
            "cwd": "${workspaceRoot}/services/flow"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ]
        }
    ]
}