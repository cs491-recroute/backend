{
  "swagger": "2.0",
  "info": {
    "title": "User Management Service",
    "description": "Manage operations related to a user",
    "version": "1.0.0"
  },
  "host": "localhost:3500",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/savecompany": {
      "post": {
        "description": "Create a new company and add it to a database",
        "parameters": [
          {
            "name": "Company",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Company"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/saveuser": {
      "post": {
        "description": "Create a new user and add it to a database",
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "definitions": {
    "Company": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Google"
        },
        "domain": {
          "type": "string",
          "example": "google.com"
        },
        "users": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Aybars"
        },
        "email": {
          "type": "string",
          "example": "aybars.altinisik@gmail.com"
        }
      }
    }
  }
}